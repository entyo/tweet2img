{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "target": "es2017",
    "outDir": "lib",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
